{
	"extends": "@config/tsconfig/next.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/assets/*": [
				"@travelpulse/ui/assets/*"
			],
			"@/styles/*": [
				"@travelpulse/ui/styles/*"
			],
		},
		"plugins": [
			{
				"name": "next"
			}
		],
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
