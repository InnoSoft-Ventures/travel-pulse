{
	"extends": "@config/tsconfig/next.json",
	"compilerOptions": {
		"baseUrl": "src/",
		"paths": {
			"@/components/*": [
				"components/*"
			],
			"@/assets/*": [
				"public/assets/*"
			],
			"@/styles/*": [
				"styles/*"
			],
			"@/public/*": [
				"public/*"
			],
			"@/lib/*": [
				"lib/*"
			],
		},
		"plugins": [
			{
				"name": "next"
			}
		],
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
