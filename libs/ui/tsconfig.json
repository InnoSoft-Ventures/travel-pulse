{
	"extends": "@config/tsconfig/base.json",
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			"@travelpulse/ui": ["index.ts"],
      "@travelpulse/ui/forms": ["src/forms/index.ts"],
      "@travelpulse/ui/utils": ["src/utils/index.ts"],
			"@travelpulse/ui/state": ["src/store/state.ts"],
			"@travelpulse/ui/thunks": ["src/store/thunks/index.ts"],
		},
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
	],
	"exclude": [
		"node_modules"
	]
}
