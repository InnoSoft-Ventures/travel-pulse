<mj-section>
  <mj-column>
    <mj-text font-size="18px" font-weight="bold">Reset your password</mj-text>
    <mj-text>Hello {{#if firstName}}{{firstName}}{{else}}there{{/if}},</mj-text>
    <mj-text>We received a request to reset your password.</mj-text>
    <mj-button href="{{resetUrl}}">Reset password</mj-button>
    <mj-text>If the button doesn't work, copy and paste this link:</mj-text>
    <mj-text color="#2563eb">{{resetUrl}}</mj-text>
  </mj-column>
</mj-section>
